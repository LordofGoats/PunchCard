<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default top-navbar">
            @Html.ActionLink("PunchCard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="nav navbar-right">
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li><a href="@Url.Action("CompanyMain", "Company")"><i class="fa fa-simplybuilt fa-fw"></i> Your Company</a></li>
                    <li><a href="@Url.Action("HoursMain", "Hours")"><i class="fa fa-building-o fa-fw"></i> Hours</a></li>
                    <li><a href="@Url.Action("ManagersMain", "Managers")"><i class="fa fa-gavel fa-fw"></i> Managers</a></li>
                    <li><a href="@Url.Action("EmployeeMain", "Employees")"><i class="fa fa-child fa-fw"></i> Employees</a></li>
                    <li><a href="@Url.Action("Index", "Manage")"><i class="fa fa-cog fa-fw"></i> Settings <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse">
                            <li><a href=""></a></li>
                            <li>Crockery</li>
                            <li>Rooster</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="page-inner">
                @RenderBody()
                <hr />
                <div class="row">
                    <footer class="panel-footer">
                        <p>&copy; @DateTime.Now.Year - PunchCard</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
