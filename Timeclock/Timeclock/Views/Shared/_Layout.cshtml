<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="http://cdn.jquerytools.org/1.2.6/full/jquery.tools.min.js"></script>
    </head>
<body class="fixed-top">
    <!--Begin top navbar-->
    <div id="header" class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                    @Html.ActionLink("PunchCard", "Index", "Home", new { area = "" }, new { @class = "brand" })
                    <a class="btn btn-navbar collapsed" id="main_menu_trigger" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="arrow"></span>
                    </a>
                    <div class="top-nav hidden-phone">
                        <ul class="nav pull-right" id="top_menu">
                            <li><a href="@Url.Action("Register", "Account")" class="hidden-phone">Register</a></li>
                            <li class="divider-vertical hidden-phone hidden-tablet"></li>
                            <li><a href="@Url.Action("Login", "Account")" class="hidden-phone">Login</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    <!--End top navbar-->
    <!--Begin main content-->
    <div class="row-fluid" id="container">
        <!--Begin sidebar-->
        <div id="sidebar" class="nav-collapse collapse">
                <div class="navbar-inverse"></div>
                <ul>
                    <li><a href="@Url.Action("Login", "Account")" class="hidden-desktop hidden-tablet"><i class="fa fa-check fa-fw"></i> Login</a></li>
                    <li><a href="@Url.Action("CompanyMain", "Company")" class="hidden-desktop hidden-tablet"><i class="fa fa-sign-in fa-fw"></i> Register</a></li>
                    <li class="active"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw"></i> Dashboard</a>
                    <li><a href="@Url.Action("CompanyMain", "Company")"><i class="fa fa-simplybuilt fa-fw"></i> Your Company</a></li>
                    <li><a href="@Url.Action("HoursMain", "Hours")"><i class="fa fa-building-o fa-fw"></i> Hours</a></li>
                    <li><a href="@Url.Action("ManagersMain", "Managers")"><i class="fa fa-gavel fa-fw"></i> Managers</a></li>
                    <li><a href="@Url.Action("Schedule", "Employees")"><i class="fa fa-calendar-o fa-fw"></i> Schedule</a></li>
                    <li><a href="@Url.Action("EmployeeMain", "Employees")"><i class="fa fa-child fa-fw"></i> Employees</a></li>
                    <li class="has-sub">
                        <a href="@Url.Action("Index", "Manage")"><i class="fa fa-cog fa-fw"></i> Settings</a>
                        <ul class="sub" style="display: none;">
                            <li><a href="www.google.com">Go to Google!</a></li>
                            <li>Crockery</li>
                            <li>Rooster</li>
                        </ul>
                        </li>
                    
                </ul>
            </div>
        <!--End sidebar-->
        <div id="body">
                    @RenderBody()
                    <hr />
                    <div id="footer">
                        <p>&copy; @DateTime.Now.Year - PunchCard</p>
                    </div>
            </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
    jQuery(document).ready(function () {
        App.init();
    });


    </script>
</body>
</html>
